<!DOCTYPE html>
<html>
  <head>
    <title>MINI APP</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <h1 class="header_title">ちょっといいこと言う</h1>
      <% if user_signed_in? %>
        <ul class="menu">
          <li class="menu_nav"><%= link_to "投稿", messages_new_path %></li>
          <li class="menu_nav"><%= link_to "退出", destroy_user_session_path, method: :delete %></li>
        </ul>
      <% else %>
        <ul class="menu">
          <li class="menu_nav"><%= link_to "入室", new_user_session_path %></li>
          <li class="menu_nav"><%= link_to "登録", new_user_registration_path  %></li>
        </ul>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
